<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_discuss_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SuperBigHead"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#e67e22"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_discuss_item_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年8月19日12点31分"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:textColor="#ccc"
                />
            <TextView
                android:id="@+id/tv_discuss_item_discuss_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>