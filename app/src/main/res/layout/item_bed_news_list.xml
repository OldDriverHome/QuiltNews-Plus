<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/iv_bed_news_list_pic"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:src="@drawable/b"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中共第十八届六中全会将召开"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15.5sp"
        android:textColor="@color/hot_news_list_title"
        android:layout_alignTop="@+id/iv_bed_news_list_pic"
        android:layout_toEndOf="@+id/iv_bed_news_list_pic"
        android:layout_toRightOf="@+id/iv_bed_news_list_pic" />

    <TextView
        android:id="@+id/tv_bed_news_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10月份北京召开，分析经济形势，部署下半年经济工作"
        android:textColor="@color/small_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:minLines="2"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/tv_news_list_item_title"
        android:layout_alignStart="@+id/tv_news_list_item_title"
        android:layout_alignLeft="@+id/tv_news_list_item_title"
        android:layout_alignBottom="@+id/iv_bed_news_list_pic" />

    <ImageView
        android:id="@+id/iv_news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divider"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>