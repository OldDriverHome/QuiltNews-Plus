<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="93dp">
    <ImageView
        android:id="@+id/iv_bed_news_list_pic"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/b"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中共第十八届六中全会将召开"
        android:layout_marginRight="15dp"

        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="15.5sp"
        android:textColor="@color/hot_news_list_title"
        android:layout_alignTop="@+id/iv_bed_news_list_pic"
        android:layout_toEndOf="@+id/iv_bed_news_list_pic"
        android:layout_toRightOf="@+id/iv_bed_news_list_pic" />

    <TextView
        android:id="@+id/tv_bed_news_list_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凤凰娱乐"
        android:textSize="11sp"
        android:textColor="@color/small_content"
        android:layout_alignBottom="@+id/iv_bed_news_list_pic"
        android:layout_alignLeft="@+id/tv_news_list_item_title"
        android:layout_alignStart="@+id/tv_news_list_item_title" />
    <TextView
        android:id="@+id/tv_bed_news_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016/09/16 23:06:00"
        android:textSize="8sp"
        android:textColor="@color/small_content"
        android:layout_alignBottom="@+id/iv_bed_news_list_pic"
        android:layout_alignRight="@+id/iv_news_item_divider"
        android:layout_alignEnd="@+id/iv_news_item_divider" />
