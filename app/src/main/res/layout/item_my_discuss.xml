<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:src="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_my_discuss_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="SuperBigHead"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_my_discuss_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.8.1.12.33"
                android:textSize="11sp"
                android:textColor="#ccc"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_my_discuss_discuss_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666"
                android:text="为中华之崛起而读书"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:id="@+id/ll_my_discuss_news_discessed"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFF4F1F1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:id="@+id/iv_my_discuss_news_pic"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/loading_s"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/tv_my_discuss_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="14sp"
                    android:textColor="#FF9B9A9A"
                    android:padding="5dp"
                    android:text="出门就晕车，吃它防晕车效果最好"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>