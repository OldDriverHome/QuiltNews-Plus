<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xushuzhan.quiltnews.ui.activity.BedNewsDetailActivity">

    <include layout="@layout/toolbar"
    android:id="@+id/include" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bed_news_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text=""
                android:textColor="#000"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#fff"
                />
            <TextView
                android:id="@+id/tv_bed_news_detail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bed_news_detail_title"
                android:textSize="10sp"
                android:background="#fff"
                android:paddingLeft="6dp"
                android:paddingBottom="10dp"
                android:text=""/>
            <WebView
                android:id="@+id/bed_news_web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_bed_news_detail_time"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
